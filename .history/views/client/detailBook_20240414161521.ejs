<div class="flex justify-center items-center min-h-screen">
    <div class="flex flex-col md:flex-row gap-8 justify-center items-center bg-white shadow-lg px-20 py-10 rounded-md w-5/6 md:w-3/4 lg:w-2/3 xl:w-2/3">
        <div class="w-full md:w-1/3 flex justify-center">
            <img class="imgPD max-w-full h-auto" src="/images/<%=book.imageURL%>" alt="">
        </div>
        <div class="flex flex-col justify-center items-start w-full md:w-2/3 leading-8 pl-5">
            <h2><a href="/book/<%=book.id%>" class="namePD font-semibold text-2xl md:text-3xl mb-2">
                    <%= book.name%>
                </a></h2>
            <span id="product-price" class="pricePD text-lg md:text-xl mb-2">
                <strong>Giá: </strong>
                <%=book.price%> VNĐ
            </span>

            <div class="h-40">
                <strong>Mô Tả: </strong><br>
                <p>
                    <%= book.description %>
                </p>
            </div>
            <div class="w-full gap-5 flex mt-5">
                <form action="/add-cart" method="post" class="w-full md:w-auto">
                    <button class="md:w-56 bg-blue-600 h-10 w-full text-white">Thêm vào giỏ hàng</button>
                    <input type="text" name="idProduct" style="display: none;" value="<%=book.id%>">
                </form>
                <a href="#" class="w-full md:w-auto">
                    <button class="md:w-56 bg-blue-600 h-10 w-full text-white">Mua ngay</button>
                </a>
            </div>
        </div>
    </div>
</div>
