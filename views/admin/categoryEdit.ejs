<div class="container mx-auto mt-10 w-96">
    <h1 class="text-3xl font-bold mb-4">SỬA DANH MỤC</h1>
    <form action="/admin/update" method="POST" class="max-w-sm mx-auto">
        <label for="name" class="block mb-2">Tên danh mục</label>
        <input value="<%= category.name %>" type="text" name="name" id="name"
            class="border border-gray-300 px-4 py-2 mb-2 w-full rounded-md"><br>

        <label class="block mb-2">Ẩn hiện</label>
        <div class="flex mb-2">
            <input type="radio" name="hidden" id="hidden1" value="1" class="mr-1" <%=(category.hidden==1) ? "checked"
                : "" %>>
            <label for="hidden1" class="mr-4">Hiện</label>

            <input type="radio" name="hidden" id="hidden0" value="0" class="mr-1" <%=(category.hidden==0) ? "checked"
                : "" %>>
            <label for="hidden0">Ẩn</label>
        </div>

        <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Lưu
            database</button>

        <input type="hidden" name="id" value="<%= category.idCategory %>">
    </form>
</div>