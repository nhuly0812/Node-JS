<h1 class="flex justify-center font-bold text-4xl mt-5">DANH MỤC</h1>
<div class="container mx-auto mt-10 flex justify-center">
    <div class="w-full sm:w-2/3 md:w-1/2">
        <a href="/admin/categoryaddnew"
            class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded">ADD</a>
        <table class="table-auto border-collapse border border-gray-300 mt-1">

        <thead>
            <tr>
                <th class="border border-gray-300 px-4 py-2 bg-gray-200">ID</th>
                <th class="border border-gray-300 px-4 py-2 bg-gray-200">DANH MỤC</th>
               
                <th class="border border-gray-300 px-4 py-2 bg-gray-200">ẨN HIỆN</th>
                <th class="border border-gray-300 px-4 py-2 bg-gray-200">CHỨC NĂNG</th>
            </tr>
        </thead>
        <tbody>
            <% for(let b of list){ %>
                <tr>
                    <td class="border border-gray-300 px-4 py-2">
                        <%= b.idCategory %>
                    </td>
                    <td class="border border-gray-300 px-4 py-2">
                        <%= b.name %>
                    </td>
                   
                    <td class="border border-gray-300 px-4 py-2">
                        <%= b.hidden==1 ? "Đang hiện" : "Đang ẩn" %>
                    </td>
                    <td class="border border-gray-300 px-4 py-2">
                        <a href="/admin/categoryedit/<%= b.idCategory %>"
                            class="text-gray-500 hover:text-gray-800">Edit</a>
                        |
                        <a href="/admin/categorydelete/<%= b.idCategory %>"
                            class="text-red-500 hover:text-red-800">Delete</a>
                    </td>
                </tr>
                <% } %>
        </tbody>
    </table>
</div>